        format="webp"
      />
    </div>
    <div class="swiper-slide">
      <img
        alt="Variacion Dall-E"
        src="https://res.cloudinary.com/srcouto/image/upload/v1654060112/santuan/tokens/4/DALL_E_2022-05-27_22.14.58_bvkptt.webp"
        width={500}
        height={500}
        loading="lazy"
