<style>
  .iniciar {
    cursor: pointer;
    position: relative;
    white-space: nowrap;
    color: var(--color-text);
  }

  .iniciar::before,
  .iniciar::after {
    position: absolute;
    width: 100%;
    height: 2px;
    background: currentColor;
    top: 100%;
    left: 0;
    pointer-events: none;
  }

  .iniciar::before {
    content: "";
    /* show by default */
  }

  .iniciar--dia {
  }

  .iniciar--dia::before,
  .iniciar--dia::after {
    opacity: 0.5;
    transform-origin: 50% 0%;
    transform: translate3d(0, 3px, 0);
    transition-property: transform, opacity;
    transition-duration: 0.3s;
    transition-timing-function: cubic-bezier(0.2, 1, 0.8, 1);
  }

  .iniciar--dia:hover::before,
  .iniciar--dia:hover::after {
    opacity: 1;
    transform: translate3d(0, 0, 0);
    transition-timing-function: cubic-bezier(0.2, 0, 0.3, 1);
  }

  .iniciar--dia::after {
    content: "";
    top: calc(100% + 10px);
    width: 70%;
    left: 15%;
  }

  .iniciar--dia::before,
  .iniciar--dia:hover::after {
    transition-delay: 0.1s;
  }

  .iniciar--dia:hover::before {
    transition-delay: 0s;
  }
</style>
