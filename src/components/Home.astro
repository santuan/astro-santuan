---
function getRandomInt(max: number) {
  return Math.floor(Math.random() * max);
}

console.log(getRandomInt(3));

const random = getRandomInt(3);

let answer = "";

if (random === 0) {
  answer = "/lab/tipografias";
} else if (random === 1) {
  answer = "/lab/containers";
} else if (random === 2) {
  answer = "/lab/renders";
}
