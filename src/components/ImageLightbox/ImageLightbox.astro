---
import Lightbox from "@/components/Modal/SvelteModal.svelte";
// import { Img } from "astro-imagetools/components";
const { alt, src } = Astro.props;
---

<div class="relative">
  <img
    alt={alt}
    src={src}
    width={800}
    height={800}
    loading="lazy"
    decoding="async"
    layout="fixed"
    placeholder="blurred"
    format="webp"
  />
  <Lightbox client:visible>
    <img
      alt={alt}
      src={src}
      width={1200}
      height={1200}
      loading="lazy"
      decoding="async"
      layout="fixed"
      placeholder="blurred"
      format="webp"
    />
  </Lightbox>
</div>
