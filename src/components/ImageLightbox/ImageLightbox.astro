---
import Lightbox from "@/components/Modal/SvelteModal.svelte";
import { Img } from "astro-imagetools/components";
const { alt, src } = Astro.props;
---

<div class="relative">
  <Img
    alt={alt}
    src={src}
    width={800}
    height={800}
    loading="lazy"
    decoding="async"
    layout="fixed"
    placeholder="blurred"
    format="webp"
  />
  <Lightbox client:idle>
    <Img
      alt={alt}
      src={src}
      width={800}
      height={800}
      loading="lazy"
      decoding="async"
      layout="fixed"
      placeholder="blurred"
      format="webp"
    />
  </Lightbox>
</div>
